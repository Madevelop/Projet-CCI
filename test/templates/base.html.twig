<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
	
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	
    <link rel="stylesheet" href="{{ asset('asset/css/main.css') }}">
    
 <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>   
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
		

		{% block stylesheets %}

		{% endblock %}
	</head>
	<body>
	<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #007BFF;">
  <a class="navbar-brand" href="{{ path('homepage') }}">W.E</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('world_escape') }}">World Escape<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('jeu_index') }}">Leaderboard</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('user_index') }}">Liste des inscrits</a>
      </li>
    </ul>


    
    <ul class="navbar-nav my-2 my-lg-0">

     {% if is_granted('ROLE_USER') %}
	 			<li class="nav-item active"><img src="{{ asset('images/avatar/')}}{{ app.user.avatar }}" style="width:auto; height:40px;"></li>
				<li class="nav-item active"><a class="nav-link" href="{{ path('user_show', {'id': app.user.id}) }}">{{ app.user.pseudo }}</a></li>
                <li class="nav-item active"><a class="nav-link" href="{{ path('app_logout') }}">Logout</a></li>
     {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item active"><a class="nav-link" href="{{ path('easyadmin') }}">Admin</a></li>
    {% endif %}
    {% else %}
                <li class="nav-item active"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
    {% endif %}
    </ul>
        </nav>

     


		{% block body %}{% endblock %}

		{% block javascripts %}
    

      <script>
        
      </script>
		{% endblock %}
	</body>
</html>
