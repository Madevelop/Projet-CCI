{% block body %}
<div class="row marketing">
    {% for comment in article.comments %}
        <div class="col-9">
        <!-- Comment-->    
        <h4> {{ comment.author }}</h4>
            <div>
                {{comment.content}}
                <footer class="blockquote-footer">
                    <cite title="Source Title"> {{ comment.postedAt ? comment.postedAt|date('d-m-y H:i') : '' }}</cite>
                </footer>
                <!--Delete/Update Comment-->
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                   <span> 
                     <a class="btn" href="{{ path('comment_edit', {'id': comment.id}) }}"target="_top">modifier</a>
                        {{ include('comment/_delete_form.html.twig') }}  
                   </span>
                {% endif %}
            </div>
         </div>
    {% endfor %}       
   <!--Add Comment-->  
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}

    {{ include('comment/_form.html.twig', {'button_label': 'Update'}) }}
 {% endif %}
</div>
{% endblock %}    
 