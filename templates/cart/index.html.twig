{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr> 
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.produit.nom }}</td>
                    <td>{{ item.produit.prix }}</td>
                    <td>{{ item.quantité }}</td>
                    <td>{{item.produit.prix * item.quantité }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id':item.produit.id}) }}" class="btn btn-danger btn-sm"  role="button">
                            <i class="fas fa-trash"></i> 
                        </a>
                    </td>
                </tr>     
            {% endfor %}       
            </tbody>
        <tfooter>
        <th>
            <td colspan = "2" class="text-right">Total :</td>
            <td> {{ total }}</td>
          
        </th>
        </tfooter>
    </table> 
    {% else %}
    <p>Surprise, c'est vide !</p>
        
    {% endif %}

{% endblock %}
