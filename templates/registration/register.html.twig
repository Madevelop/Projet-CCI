{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block title %}Inscription{% endblock %}

    {% block body %}
         <h1>Inscription</h1>
        {{ form_start(registrationForm, {attr: {novalidate: 'novalidate'}}) }}
        <form>
            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr':
                        {'placeholder':'Adresse email ...'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
             <div class="form-group">
                {{ form_row(registrationForm.pseudo,{'attr':
                        {'placeholder':'Par quel petit nom veux-tu que l\'on t\'appel ?...'}}) }}
            </div>
             <div class="form-group">
                {{ form_row(registrationForm.age,{'attr':
                        {'placeholder':'Quel jour es-tu venu illuminer ce monde ? ...'}}) }}
            </div>
             <div class="form-group">
                {{ form_row(registrationForm.avatar,{'attr':
                        {'placeholder':'Quelle tête veux-tu avoir? Fais nous rêver...'}}) }}
            </div>
             <div class="form-group">
                {{ form_row(registrationForm.pays,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
            <div class="form-group form-check">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        {{ form_end(registrationForm) }}
       
    {% endblock %}
