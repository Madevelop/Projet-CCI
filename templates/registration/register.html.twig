{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block title %}Inscription{% endblock %}

    {% block body %}
    <div class="container center">
         <h1>Inscription</h1>
        {{ form_start(registrationForm, {attr: {novalidate: 'novalidate'}}) }}
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_row(registrationForm.email, {'attr':
                        {'placeholder':'Adresse email ...'}}) }}
            </div>
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_row(registrationForm.plainPassword,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_row(registrationForm.pseudo,{'attr':
                        {'placeholder':'Par quel petit nom veux-tu que l\'on t\'appel ?...'}}) }}
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_row(registrationForm.age,{'attr':
                        {'placeholder':'Quel jour es-tu venu illuminer ce monde ? ...'}}) }}
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_row(registrationForm.avatar,{'attr':
                        {'placeholder':'Quelle tête veux-tu avoir? Fais nous rêver...'}}) }}
            </div>
             <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                {{ form_row(registrationForm.pays,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
            <div class="input-field col s12 m6 l6 offset-m3 offset-l3 form-check">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
             <div class="input-field col s12">
                <input type="submit" name="" class="btn btn-primary" value="M'inscrire">
            </div>
        {{ form_end(registrationForm) }}
    </div>
       
    {% endblock %}
