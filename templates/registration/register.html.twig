{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block title %}Inscription{% endblock %}

   {% block body %}
   <div class="backgroundRegister">
   
         <h1 class="py-5">Inscription</h1>
        {{ form_start(registrationForm, {attr: {novalidate: 'novalidate'}}) }}
        
        <div class="col-sm-10 col-md-6 col-lg-5 mx-auto py-4 backgroundCenter">
      <div class="formLeft">
            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr':
{'placeholder':'Adresse email ...'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
             <div class="form-group">
                {{ form_row(registrationForm.pseudo,{'attr':
                        {'placeholder':'Par quel petit nom veux-tu que l\'on t\'appel ?...'}}) }}
            </div>
             <div class="form-group">
                {{ form_row(registrationForm.age,{'attr':
                        {'placeholder':'Quel jour es-tu venu illuminer ce monde ? ...'}}) }}
            </div>

             <div class="form-group">
                {{ form_row(registrationForm.pays,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.imageFile,{'attr':
                        {'placeholder':'Entrer votre mot de passe...'}}) }}
            </div>
            <div class="form-group form-check">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
 </div>
 <div class="formRight">
 </div>
        </div>
        </div>
        {{ form_end(registrationForm) }}
    {% endblock %}
